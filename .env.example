# e-Shram (UAN Validator)
# Base URL and paths from the official API docs (image)
ESHRAM_BASE_URL=https://betaapiregisterapi.eshram.gov.in/externalscheme-api-service
ESHRAM_AUTH_PATH=/api/v1/generateAuthToken
ESHRAM_VALIDATE_PATH=/api/v1/validateUserByUanAndDob
# Provide either CLIENT_ID/CLIENT_SECRET or a full JSON payload via ESHRAM_AUTH_PAYLOAD
# ESHRAM_CLIENT_ID=your_client_id
# ESHRAM_CLIENT_SECRET=your_client_secret
# Or:
# ESHRAM_AUTH_PAYLOAD={"clientId":"...","clientSecret":"..."}
# Date formats (input from UI and API expected)
ESHRAM_DOB_INPUT_FORMAT=%Y-%m-%d
ESHRAM_DOB_API_FORMAT=%d-%m-%Y
ESHRAM_TOKEN_TTL=1500

# RGI (Registrar General of India) Birth/Death certificate verification
RGI_BASE_URL=https://apisetu.gov.in/certificate/v3/rgi
RGI_BIRTH_PATH=/btcer
RGI_DEATH_PATH=/dtcer
# API key header name and value if required by your integration
# RGI_API_KEY_HEADER=x-api-key
# RGI_API_KEY=your_key
RGI_CONSUMER_ID=krishiyukti-app
RGI_PROVIDER_ID=rgi
RGI_PURPOSE=Certificate verification for citizen
